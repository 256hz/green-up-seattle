<div class="game-round">

  <% if session[:message] %>
    <h3 class="message"><%= session[:message] %></h3>
  <% end %>

  <h2>Round <%= session[:round] %></h2>
  <h3>Points: <%= session[:points] %></h3>
  <br>

  <img class="wastepic" src="<%= @waste.img_url %>" alt="<%= @waste.name %>" />

  <h3>Which bin does this go in?</h3>

  <%= @waste['name'] %>
  <br>
  <br>
  <%= form_tag ({controller: 'games', action: 'round', method: 'post'}) do %>
    <%= image_submit_tag("/images/buttons/trash-button.png", name: 'commit', value: 'trash') %>
    <%= image_submit_tag("/images/buttons/recycle-button.png", name: 'commit', value: 'recycling') %>
    <%= image_submit_tag("/images/buttons/compost-button.png", name: 'commit', value: 'compost') %>
  <% end %>

</div>
