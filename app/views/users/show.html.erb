<div class="container" >
  <h1><%= @user.username %> </h1>
  <h4><%= @user.hood.name %> </h4>
  <h2><%= @user.name %> </h2>
  <h3>Level <%= @user.level %> </h3>
  <h4>Total Points: <%= @user.points %> </h4>
